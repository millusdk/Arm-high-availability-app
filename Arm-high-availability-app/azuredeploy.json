{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Arm-high-avalibility-app-ad01-storageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "Arm-high-avalibility-app-ad01AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "Arm-high-avalibility-app-ad01AdminPassword": {
      "type": "securestring"
    },
    "Arm-high-avalibility-app-ad01WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2012-R2-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    }
  },
  "variables": {
    "Arm-high-availability-app-vnetName": "[concat(resourceGroup().name,'-', 'vnet')]",
    "Arm-high-availability-app-vnetPrefix": "10.0.0.0/16",
    "Arm-high-availability-app-vnetDmzName": "DMZ",
    "Arm-high-availability-app-vnetDmzPrefix": "10.0.0.0/24",
    "Arm-high-availability-app-vnetLanName": "LAN",
    "Arm-high-availability-app-vnetLanPrefix": "10.0.1.0/24",

    "Arm-high-avalibility-app-ad01Name": "[concat(resourceGroup().name,'-', 'Ad01')]",
    "Arm-high-avalibility-app-ad01-storageName": "[concat(replace(variables('Arm-high-avalibility-app-ad01Name'), '-',''), 'storage')]",
    "Arm-high-avalibility-app-ad01ImagePublisher": "MicrosoftWindowsServer",
    "Arm-high-avalibility-app-ad01ImageOffer": "WindowsServer",
    "Arm-high-avalibility-app-ad01OSDiskName": "[concat(variables('Arm-high-avalibility-app-ad01Name'), '-', 'osdisk')]",
    "Arm-high-avalibility-app-ad01VmSize": "Standard_D2_v2",
    "Arm-high-avalibility-app-ad01VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'Arm-high-availability-app-vnet')]",
    "Arm-high-avalibility-app-ad01SubnetRef": "[concat(variables('Arm-high-avalibility-app-ad01VnetID'), '/subnets/', variables('Arm-high-availability-app-vnetLanName'))]",
    "Arm-high-avalibility-app-ad01StorageAccountContainerName": "vhds",
    "Arm-high-avalibility-app-ad01NicName": "[concat(variables('Arm-high-avalibility-app-ad01Name'), '-', 'nic01')]"
  },
  "resources": [
    {
      "name": "[variables('Arm-high-avalibility-app-ad01-storageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('Arm-high-avalibility-app-ad01-storageType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "Arm-high-avalibility-app-ad01-storage"
      },
      "kind": "Storage"
    }
    ],
  "outputs": {}
}
